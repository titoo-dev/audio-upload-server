{
  "name": "audio-upload-server",
  "version": "1.0.0",
  "description": "Express server for handling audio file uploads",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
    "build": "tsc",
    "watch": "tsc -w",
    "setup": "node -e \"require('os').platform() === 'win32' ? require('child_process').execSync('powershell -ExecutionPolicy Bypass -File setup.ps1', {stdio: 'inherit'}) : require('child_process').execSync('bash setup.sh', {stdio: 'inherit'})\"",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-sse": "^1.0.0",
    "i": "^0.3.7",
    "multer": "^1.4.5-lts.1",
    "npm": "^11.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
